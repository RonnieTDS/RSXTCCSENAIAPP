<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTCC.Views.PageLogin" Title="Login" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Frame BackgroundColor="Beige" CornerRadius="25" Margin="15">
                <StackLayout>
                    <Entry Placeholder="Login" Keyboard="Default" x:Name="txtLogin"/>
                    <Entry Placeholder="Senha" Keyboard="Default" x:Name="txtSenha" IsPassword="True"/>
                    <Button Text="LOGIN" x:Name="btLogin" FontAttributes="Bold" TextColor="White" BackgroundColor="#08546C" CornerRadius="45" Clicked="btLogin_Clicked"/>
                    <Image Source="rsx" HorizontalOptions="Center" VerticalOptions="Center"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>